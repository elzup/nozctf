{
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"],
    "source": "functions"
  },
  "hosting": {
    "public": "out",
    "rewrites": [{ "source": "/answer", "function": "answer" }],
    "predeploy": "yarn export",
    "cleanUrls": true
  },
  "emulators": {
    "firestore": { "host": "localhost", "port": "4000" }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
