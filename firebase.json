{
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"],
    "source": "functions"
  },
  "hosting": {
    "public": "out",
    "rewrites": [{ "source": "solve", "function": "solve" }],
    "predeploy": "yarn export"
  },
  "emulators": {
    "firestore": { "host": "localhost", "port": "4000" }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
